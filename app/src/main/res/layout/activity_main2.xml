<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yu.myapplication.Main2Activity"
    android:background="#faefd5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:text="Counter：0"
        android:layout_marginTop="400dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:text="Gold：0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="365dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="450dp"
        android:background="@drawable/button1"
        android:onClick="backbutton" />

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/musumei"
        android:id="@+id/imageView2"
        android:layout_height="300dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="200dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="回復藥水："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="0."
                android:textColor="@android:color/background_dark" />

            <ImageButton

                android:layout_height="wrap_content"
                app:srcCompat="@drawable/solution2"
                android:id="@+id/imageButton2"
                android:background="@android:color/transparent"
                android:paddingTop="14dp"
                android:layout_width="0dip"
                android:layout_weight="1"/>

            <EditText
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editText"
                android:hint="請輸入"
                android:textSize="16sp"
                android:textColor="?attr/colorButtonNormal"
                android:layout_width="85dp"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:text="購買/使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button12"
                android:layout_weight="0.5"
                android:onClick="hpbuy" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="力量藥水："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0."
                android:textColor="@android:color/background_dark" />

            <ImageButton
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/solution3"
                android:id="@+id/imageButton3"
                android:background="@android:color/transparent"
                android:paddingTop="14dp"
                android:layout_width="0dip"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="請輸入"
                android:textSize="16sp"
                android:id="@+id/editText2"
                android:layout_weight="0."
                android:textColor="?attr/colorButtonNormal"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:text="購買/使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button14"
                android:layout_weight="0.5"
                android:onClick="sbuy" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="體力藥水："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="0."
                android:textColor="@android:color/background_dark" />

            <ImageButton
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/solution1"
                android:id="@+id/imageButton4"
                android:background="@android:color/transparent"
                android:paddingTop="14dp"
                android:layout_width="0dip"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editText3"
                android:hint="請輸入"
                android:textSize="16sp"
                android:textColor="?attr/colorButtonNormal"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:text="購買/使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button15"
                android:layout_weight="0.5"
                android:onClick="vbuy" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="力量卷軸："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0."
                android:textColor="@android:color/background_dark"  />

            <ImageButton
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/str"
                android:id="@+id/imageButton"
                android:background="@android:color/transparent"
                android:paddingTop="10dp"
                android:layout_width="0dip"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="請輸入"
                android:textSize="16sp"
                android:textColor="?attr/colorButtonNormal"
                android:textColorHint="@android:color/darker_gray"/>

            <Button
                android:text="購買/使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:layout_weight="0.5"
                android:onClick="strreelbuy"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="體力卷軸："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="0."
                android:textColor="@android:color/background_dark" />

            <ImageButton
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hp"
                android:id="@+id/imageButton5"
                android:background="@android:color/transparent"
                android:paddingTop="10dp"
                android:layout_width="0dip"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="請輸入"
                android:textSize="16sp"
                android:textColor="?attr/colorButtonNormal"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:text="購買/使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button9"
                android:layout_weight="0.5"
                android:onClick="hpreelbuy"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="時光卷軸："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="0."
                android:textColor="@android:color/background_dark" />

            <ImageButton
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/timereel"
                android:id="@+id/imageButton6"
                android:background="@android:color/transparent"
                android:paddingTop="10dp"
                android:layout_width="0dip"
                android:layout_weight="1" />

            <Button
                android:text="購買/使用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button10"
                android:layout_weight="1.7"
                android:onClick="timereelbuy" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
